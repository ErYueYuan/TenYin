page {
  background: #FFFFFF;
}

.article_item {
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #FFFFFF;
}

.left {
  margin-right: 32rpx;
}

.title {
  font-size: 32rpx;
  color: #262626;
  line-height: 45rpx;
  margin-bottom: 36rpx;
  width: 280rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bold;
}

.read {
  font-size: 28rpx;
  color: #666666;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.right image {
  width: 268rpx;
  height: 174rpx;
  border-radius: 12rpx;
}

.flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
}

/* 未选中的 背景样式 */
checkbox .wx-checkbox-input {
  border: 1rpx solid #FF771B;
  width: 32rpx;
  height: 32rpx;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 1rpx solid #FF783B;
  background: #FF783B;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.footbtn {
  position: fixed;
  bottom: 0;
  background: #FFFFFF;
  width: 100%;
  line-height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footbtn image {
  width: 40rpx;
  height: 40rpx;
}

.footbtn text {
  font-size: 32rpx;
  color: #FF8301;
  margin-left: 6rpx;
}

.page-section {
  padding-bottom: 200rpx;
}

.btn {
  padding: 10rpx 0 60rpx 0;
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 10;
}

.save_btn {
  width: 686rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #FF8301;
  border-radius: 47rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  margin: 0 auto;
}


