/* pages/certification/certification.wxss */
.box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 686rpx;
  margin: 0 auto;
  border-top: 1rpx solid #EEEEEE;
  padding: 35rpx 0;
}

.title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.title text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.20);
}

.content {
  font-size: 34rpx;
  color: #999999;
}

.right image {
  width: 12rpx;
  height: 22rpx;
}

.add {
  width: 136rpx;
  height: 136rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add image {
  width: 40rpx;
  height: 40rpx;
}

.btn {
  padding: 10rpx 0 60rpx 0;
  /* border-top: 1rpx solid rgba(0, 0, 0, 0.25); */
  background: #FFFFFF;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.save_btn {
  width: 343rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #FF8301;
  border: 1px solid #FF8301;
  border-radius: 0px 100px 100px 0px;
  font-size: 36rpx;
  color: #FFFFFF;
  display: inline-block;
}

.del_btn {
  width: 343rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #FFFFFF;
  border: 1px solid #FF8301;
  border-radius: 100px 0px 0px 100px;
  font-size: 36rpx;
  color: #FF8301;
  display: inline-block;
  margin-left: 32rpx;
}

.edit_content {
  font-size: 34rpx;
  color: #333333;
}

.reupload {
  font-size: 34rpx;
  color: #FF8301;
  text-decoration: underline;
  margin-left: 20rpx;
}

.pretext {
  font-size: 34rpx;
  color: #999999;
}

.pre image {
  width: 136rpx;
  height: 136rpx;
}

.add_btn {
  width: 686rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #FF8301;
  border-radius: 47rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  margin: 0 auto;
}







