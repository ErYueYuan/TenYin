<include src="../../compoents/toast_text/toast.wxml" />
<include src="../../compoents/toast_notice/toast.wxml" />

<view style="height:{{ hasUserInfo && canIUse ? '600rpx' : '470rpx'}}; position: relative;">
	<view class="bgchange" style="background-image: url({{backgroundImage}})">
		<view class="change" style="left: 540rpx;" wx:if="{{hasUserInfo && isMe && isStartEdit}}" bindtap="changeImg">
			<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/change-bg.png"></image>
			更换背景
		</view>
		<view class="change" style="left: 495rpx; display: none;" wx:if="{{hasUserInfo}}" bindtap="changeMusic">
			<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/change-music.png"></image>
			更换背景音乐
		</view>
	</view>

	<!-- 已授权 -->
	<view class="card" wx:if="{{hasUserInfo && canIUse}}">
		<view class="head">
			<view class="imgbox">
				<image src="{{head}}" class="headimg" mode="aspectFit"></image>
			</view>
			<view class="name">{{userVc.name}}</view>
		</view>
		<view class="personality">
			<view class="medal">
				<!-- 勋章图片，暂无勋章体系 先注释 -->
				<!-- <view>
					<image src="../images/cot.png" class="medal_img"></image>
					<image src="../images/ln.png" class="medal_img"></image>
					<image src="../images/mdrt.png" class="medal_img"></image>
					<image src="../images/rs.png" class="medal_img"></image>
				</view> -->
				<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/edit2.png"
					class="{{isStartEdit ? 'medal_editimg' : 'hide_medal_editimg'}}" bindtap="edit"></image>
			</view>
			<view class="signature">{{!!slogan ? slogan : '快去添加个人简介吧~'}}</view>
		</view>
		<view class="company">
			<view class="company_name">{{userVcCompany.companyName}}</view>
			<view class="{{!!userVc.userTitle ? 'company_position' : 'no'}}">{{userVc.userTitle}}</view>
		</view>
		<view class="edit">
			<view class="edit_module" bindtap="{{isMe ? 'edit' : 'checkWechat'}}">
				<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/i1.png" class="edit_icon">
				</image>
				<view class="edit_text"><text>微信</text><!--wx:if='{{isEdit}}'-->
					<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/right.png" wx:if="{{isMe}}"
						class="right"></image>
				</view>
			</view>
			<view class="edit_module" bindtap="{{isMe ? 'edit' : 'phone'}}">
				<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/i2.png" class="edit_icon">
				</image>
				<view class="edit_text"><text>电话</text><!--wx:if='{{isEdit}}'-->
					<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/right.png" wx:if="{{isMe}}"
						class="right"></image>
				</view>
			</view>
			<view class="edit_module" style="margin-right: {{ isEdit ? '0rpx' : '36rpx' }};"
