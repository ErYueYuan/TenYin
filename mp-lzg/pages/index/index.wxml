								class="edit_img" data-editid="{{item.id}}" bindtap="editExperience"></image>
						</view>
						<view class="experience_content_item">
							<view class="work_name" style="color:{{isEditWork?'#333333':'#999999'}};">{{item.position}}</view>
							<view class="work_date" style="color:{{isEditWork?'#666666':'#999999'}};">{{item.startDate}} 至
