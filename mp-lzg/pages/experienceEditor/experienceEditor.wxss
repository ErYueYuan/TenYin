/* pages/experienceEditor/experienceEditor.wxss */
page {
  /* background: #F8F9FB; */
  background: #FFFFFF;
}

.box {
  margin: 48rpx 32rpx 0 32rpx;
}

.bottom {
  width: 638rpx;
  height: auto;
  background: #FFFFFF;
  padding-top: 26rpx;
  margin: 0 auto;
  border-radius: 8rpx;
}

.content {
  font-size: 28rpx;
  color: #333333;
  line-height: 44rpx;
  margin-left: 31rpx;
  width: 570rpx;
}

.tip {
  font-size: 30rpx;
  color: #999999;
  padding-top: 16rpx;
  display: flex;
  align-items: center;
  width: 150rpx;
  margin: 32rpx auto auto auto;
}

.tip image {
  width: 12rpx;
  height: 20rpx;
  margin-left: 9rpx;
}

.top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.title {
  font-size: 40rpx;
  color: #333333;
}

.operation {
  display: flex;
  align-items: center;
}

.show_img {
  width: 44rpx !important;
  height: 44rpx !important;
  margin-right: 8rpx;
}

.del {
  font-size: 24rpx;
  color: #FF8301;
}

.del_gray {
  font-size: 24rpx;
  color: #999999;
}

.honor_title text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.20);
}

.btn {
  padding: 10rpx 0 60rpx 0;
  border-top: 1rpx solid #EEEEEE;
  background: #FFFFFF;
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.save_btn {
  width: 343rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #FF8301;
  border: 1px solid #FF8301;
  border-radius: 0px 100px 100px 0px;
  font-size: 36rpx;
  color: #FFFFFF;
  display: inline-block;
}

.del_btn {
  width: 343rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #FFFFFF;
  border: 1px solid #FF8301;
  border-radius: 100px 0px 0px 100px;
  font-size: 36rpx;
  color: #FF8301;
  display: inline-block;
  margin-left: 32rpx;
}

.honor_title {
  font-size: 28rpx;
  color: #666666;
  padding-bottom: 35rpx;
  border-bottom: 1rpx solid #EEEEEE;
  margin-bottom: 35rpx;
}

.honor_title input {
  font-size: 34rpx;
  color: #333333;
  margin-top: 12rpx;
}

.honor_title image {
  width: 12rpx;
  height: 22rpx;
}

.del_honor {
  font-size: 30rpx;
  color: #FF8301;
  display: flex;
  align-items: center;
  text-align: center;
  width: 202rpx;
  margin: 0 auto;
}

.del_honor image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}

.row_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.add_btn {
  width: 686rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #FF8301;
  border-radius: 47rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  margin: 0 auto;
}

.no {
  display: none;
}

@import "../../compoents/toast_text/toast.wxss";