<include src="../../compoents/toast_text/toast.wxml" />
<include src="../../compoents/toast_notice/toast.wxml" />
<!-- 选择默认音乐 -->
<view>
	<view class="title">选择默认音乐</view>
	<view class="music_item" wx:for="{{musicList}}" wx:key="index" wx:for-index="index">
		<view class="left" data-name="{{item.name}}" bindtap="musicDetail">
			<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/music.png" class="music_logo"></image>
			<view>{{item.name}}</view>
		</view>
		<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/radio_on.png" class="radio_img" wx:if="{{item.checked}}"></image>
		<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/radio.png" class="radio_img" wx:if="{{!item.checked}}" data-name="{{item.name}}" bindtap="choose" id="{{item.id}}"></image>
	</view>
</view>
<!-- 自己录音 -->
<view>
	<view class="title" style="margin-top: 56rpx;">自己录音</view>
	<view class="music_item" style="padding: 40rpx 30rpx 30rpx 30rpx;">
		<view class="left">
			<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/mine_music.png" class="mine_music_logo"></image>
			<view>
				<view class="name">
					<!-- <view bindtap="writeName">录音1</view> -->
					<view bindtap="writeName">{{music_name}}</view>
					<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/del.png"></image>
				</view>
				<view class="date">00:00:09 2020/07/10</view>
			</view>
		</view>
		<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/radio.png" class="radio_img"></image>
	</view>
	<view class="sound">
		<view class="record">{{title}}</view>
		<!-- <view class="time">00:00:00</view> -->
		<view class="time">{{time}} 秒</view>
		<view>
			<image mode="widthFix" src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/record.png" bindtap="recordBtn"></image>
		</view>
		<!-- <image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/static/userVc/dlrpic/record.png" bindtap="recordBtn" wx:if="{{status=='0'}}"></image> -->
	</view>
</view>
<!-- 按钮 -->
<view class="btn">
	<view class="save_btn" bindtap="commit">确定</view>
</view>