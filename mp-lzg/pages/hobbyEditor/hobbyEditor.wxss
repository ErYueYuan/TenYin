page {
  background: #FFFFFF;
}

.box {
  margin: 48rpx 32rpx;
}

.bottom {
  width: 686rpx;
  height: auto;
  border-radius: 12rpx;
  margin: 0 auto;
}

.content {
  font-size: 28rpx;
  color: #333333;
  line-height: 44rpx;
}

.tip {
  font-size: 24rpx;
  color: #999999;
  border-top: 1rpx solid #EEEEEE;
  padding-top: 16rpx;
  margin-top: 65rpx;
}

.top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.title {
  font-size: 40rpx;
  color: #333333;
}

.title text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.20);
  margin-left: 8rpx;
}

.operation {
  display: flex;
  align-items: center;
}

.operation image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}

.del {
  font-size: 24rpx;
  color: #FF8301;
}

.btn {
  padding: 10rpx 0 60rpx 0;
  background: #FFFFFF;
  position: fixed;
  width: 100%;
  bottom: 0;
}

.myhobby {
  height: 410rpx;
}

.save_btn {
  width: 686rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #FF8301;
  border-radius: 47rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  margin: 0 auto;
}

.honor_title {
  font-size: 28rpx;
  color: #666666;
  padding-bottom: 35rpx;
  border-bottom: 1rpx solid #EEEEEE;
  margin-bottom: 35rpx;
}

.honor_title input {
  font-size: 34rpx;
  color: #333333;
  margin-top: 12rpx;
}

.del_honor {
  font-size: 30rpx;
  color: #FF8301;
  display: flex;
  align-items: center;
  text-align: center;
  width: 202rpx;
  margin: 0 auto;
}

.del_honor image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}

.hobby_item {
  background: rgba(255, 131, 1, 0.10);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #FF8301;
  margin: 16rpx 16rpx 0 0;
  padding: 10rpx 24rpx;
  display: inline-block;
}

.hobby_item image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 9rpx;
}

.add_item {
  background: #F5F5F5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #999999;
  margin: 16rpx 16rpx 0 0;
  padding: 10rpx 24rpx;
  display: inline-block;
}

.add_item image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 9rpx;
}

.empty {
  width: 80%;
  height: auto;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.20);
  margin: 0 auto;
}

