/* pages/personEditor/personEditor.wxss */
page {
  background: #F8F9FB;
}

.box {
  margin: 48rpx 32rpx 0 32rpx;
}

.bottom {
  width: 638rpx;
  height: auto;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx 24rpx 32rpx 24rpx;
  /* box-shadow: 0 2rpx 14rpx 0 rgba(62, 47, 152, 0.08); */
  margin: 24rpx auto auto auto;
}

.bottom:first-child {
  margin-top: 0;
}

.content {
  font-size: 28rpx;
  color: #333333;
  line-height: 44rpx;

  white-space: pre-wrap;
}

.tip {
  font-size: 24rpx;
  color: #999999;
  border-top: 1rpx solid #EEEEEE;
  padding-top: 16rpx;
  margin-top: 65rpx;
}

.top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.title {
  font-size: 40rpx;
  color: #333333;
}

.operation {
  display: flex;
  align-items: center;
}

.operation image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}

.del {
  font-size: 28rpx;
  color: #FF8301;
}

.btn {
  padding: 10rpx 0 60rpx 0;
  /* border-top: 1rpx solid #EEEEEE; */
  background: #FFFFFF;
  position: fixed;
  width: 100%;
  bottom: 0;
}

.save_btn {
  width: 686rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #FF8301;
  border-radius: 47rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  margin: 0 auto;
}

.honor_title {
  font-size: 28rpx;
  color: #666666;
  padding-bottom: 35rpx;
  border-bottom: 1rpx solid #EEEEEE;
  margin-bottom: 35rpx;
}

.honor_title input {
  font-size: 34rpx;
  color: #333333;
  margin-top: 12rpx;
}

.honor_title image {
  width: 12rpx;
  height: 22rpx;
}

.del_honor {
  font-size: 30rpx;
  color: #FF8301;
  display: flex;
  align-items: center;
  text-align: center;
  width: 202rpx;
  margin: 0 auto;
}

.del_honor image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}

.picker {
  font-size: 34rpx;
  color: #333333;
  margin-top: 12rpx;
}

.row_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

@import "../../compoents/toast_text/toast.wxss";