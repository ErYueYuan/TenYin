
.top {
  width: 100%;
  border-top: 1rpx solid #EEEEEE;
  padding: 14rpx 0;
}

.search {
  width: 669rpx;
  height: 38rpx;
  line-height: 60rpx;
  background: rgba(0, 0, 0, 0.04);
  border-radius: 30rpx;
  padding: 11rpx 0 11rpx 17rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
}

.search image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.search input {
  font-size: 26rpx;
  color: #999999;
  display: inline-block;
  width: 90%;
}

.left {
  width: 32%;
  background: #F7F7F7;
  float: left;
  z-index: 2;
}

.right {
  width: 68%;
  height: auto;
  background: #ffffff;
  float: right;
  z-index: 2;
}

.piece {
  background: #F5F5F5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #999999;
  padding: 10rpx 16rpx;
  margin: 24rpx 0 0 16rpx;
  display: inline-block;
}

.active {
  background: rgba(255, 131, 1, 0.10);
  color: #FF8301;
}

.tab_item {
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  background: #F7F7F7;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}

.on {
  background: #FFFFFF;
  font-size: 28rpx;
  color: #FF8301;
}

.search_content {
  width: 100%;
  height: auto;
  background: #ffffff;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  box-sizing: border-box;
  padding: 32rpx 0 32rpx 32rpx;
  z-index: 3;
  position: fixed;
  top: 90rpx;
  left: 0;
}

.content {
  background: #F5F5F5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #999999;
  padding: 10rpx 16rpx;
  display: inline-block;
  margin: 0 16rpx 24rpx 0;
}

.content_active {
  background: #F5F5F5;
  color: #FF8301;
}

.search_mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 90rpx;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 2;
}




