/* pages/edit/edit.wxss */
page {
  background: #fff;
}

.tip {
  width: 100%;
  height: 72rpx;
  background: #FEFCEB;
  padding: 14rpx 0;
  font-size: 28rpx;
  color: #999999;
  display: flex;
  align-items: center;
}

.tip image {
  width: 44rpx;
  height: 44rpx;
  margin: 0 18rpx 0 28rpx;
}

.bind {
  font-size: 28rpx;
  color: #FF8301;
  text-decoration: underline;
}

.head {
  width: 100%;
  height: auto;
  margin: 42rpx 0 15rpx 0;
  text-align: center;
}

.head_img {
  width: 135rpx;
  height: 135rpx;
  margin: auto auto 28rpx auto;
  border-radius: 50%;
  box-shadow: 0 2rpx 14rpx 0 rgba(62, 47, 152, 0.4);
}

.head_title {
  font-size: 24rpx;
  color: #999999;
}

.edit_item {
  width: 686rpx;
  height: auto;
  border-bottom: 1rpx solid #EEEEEE;
  padding: 35rpx 0;
  margin: 0 auto;
}

.row_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.edit_item image {
  width: 12rpx;
  height: 22rpx;
}

.edit_tip {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.edit_tip text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.20);
}

.redstar {
  color: red !important;
}

.reupload {
  font-size: 34rpx;
  color: #FF8301;
  text-decoration: underline;
  margin-left: 20rpx;
}

.pretext {
  font-size: 34rpx;
  color: #999999;
}

.pre image {
  width: 136rpx;
  height: 136rpx;
}

.edit_content {
  font-size: 34rpx;
  color: #333333;
}

.adviser {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  margin: 42rpx 0 61rpx 0;
}

.adviser text {
  font-size: 28rpx;
  color: #FF8301;
  text-decoration: underline;
}

.btn {
  padding: 10rpx 0 60rpx 0;
  /* position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 10; */
}

.save_btn {
  width: 686rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  background: #FF8301;
  border-radius: 47rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  margin: 0 auto;
}

.add_code {
  width: 136rpx;
  height: 136rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  position: relative;
}

.add_code image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 48rpx;
  left: 48rpx;
}

.experience_content {
  width: 630rpx;
  height: auto;
  background: #F7FAFF;
  border-radius: 12rpx;
  margin: 0 auto;
  padding: 26rpx 30rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #333333;

}

.content {
  width: 100%;
  height: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
  margin-bottom: 32rpx;
}

.open_button {
  font-size: 36rpx;
  color: #999999;
  display: flex;
  align-items: center;
  width: 180rpx;
  margin: 0 auto;
}

.open_button image {
  width: 12rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.pickerBanner {
  width: 100%;
  background: white;
  height: 100rpx;
  bottom: 45%;
  position: absolute;
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  box-sizing: border-box;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.pickerNo {
  left: 20rpx;
  text-align: left;
  color: #FF771B;
  font-size: 30rpx;
}

.pickerTitle {
  font-size: 32rpx;
  color: #333333;
}

.pickerOk {
  right: 20rpx;
  text-align: right;
  color: #FF771B;
  font-size: 30rpx;
}

.column_item {
  height: 100rpx;
  line-height: 100rpx;
}

@import "../../compoents/toast_text/toast.wxss";