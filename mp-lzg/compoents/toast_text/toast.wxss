/* toast.wxss */

/* mask 背景  */

.toast_mask3 {
  /* opacity: 0.5; */
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
  position: fixed;
  z-index: 88888;
  background: rgba(0, 0, 0, 0.1);
}

/*toast 盒子*/

.toast_content_box3 {
  display: flex;
  width: 100%;
  bottom: 0;
  left: 0;
  align-items: center;
  position: fixed;
  flex-direction: column;
  justify-content: center;
  z-index: 99999;
  margin-bottom: 80%;
}

/*toast 内容*/

.toast_content3 {
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  /* border-radius: 20rpx; */
  /* padding: 40rpx 34rpx; */
  /* background: rgba(0, 0, 0, 0.35); */
  color: #fff;
  font-size: 28rpx;
  background:rgba(0,0,0,1);
opacity:0.7;
border-radius:5rpx;
}

/*toast 内容文字*/

.toast_content_text3 {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
}

.text3 {
  text-align: center;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
