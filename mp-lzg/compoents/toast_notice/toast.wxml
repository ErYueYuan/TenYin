<!-- 录音输入名称 -->
<view class="music_modal" wx:if="{{music_showModal}}">
	<view class="music_top">
		<view class="music_modal_title">录音名称</view>
		<view class="music_modal_text">
			<input placeholder="请输入名称" placeholder-class="music_placeholder" bindblur="musicNameBlur"></input>
		</view>
	</view>
	<view class="music_btn">
		<view class="music_btn_cancel" bindtap="music_cancel">取消</view>
		<view class="music_btn_ok" bindtap="music_ok">确定</view>
	</view>
</view>
<!-- END -->


<!-- 信息存疑反馈-空 -->
<view class="mask" catchtouchmove="preventTouchMove" wx:if="{{!isMe && disable_showModal}}"></view>
<view class="doubt_modal" wx:if="{{!isMe && disable_showModal}}">
	<view class="doubt_modal_title">这里空空如也，换个链接打开吧！</view>
	<view class="doubt_btn">
		<navigator target="miniProgram" open-type="exit" class="doubt_btn_ok" style="width: 100%;">好的</navigator>
	</view>
</view>
<!-- END -->


<!-- 违规禁用弹框 -->
<view class="mask" catchtouchmove="preventTouchMove" wx:if="{{disable_showModal}}" bindtap="disable_cancel"></view>
<view class="disable_modal" wx:if="{{disable_showModal}}">
	<view class="disable_top">
		<view class="disable_modal_title">违规禁用</view>
		<view class="disable_modal_text">经审核，用户存在违规行为，已暂时被禁止使用。</view>
	</view>
	<view class="disable_btn" bindtap="disable_cancel">退出</view>
</view>
<!-- END -->


<!-- 微信二维码 -->
<view class="mask" catchtouchmove="preventTouchMove" wx:if="{{qrcode_showModal}}" bindtap="hidecode"></view>
<view class="qrcode_modal" wx:if="{{qrcode_showModal}}">
	<view class="qrcode_top">
		<image mode="widthFix" src="{{qrcodeImg}}" data-src="{{qrcodeImg}}" bindtap="previewImage" class="qrcode_img">
		</image>
		<view class="qrcode_modal_text">扫码联系顾问</view>
	</view>
	<image src="https://upload-10051630.cos.ap-shanghai.myqcloud.com/lzg/course/card/close.png" class="close_img"
		bindtap="hidecode"></image>
</view>
<!-- END -->


<!-- 生成海报分享 -->
<view class="mask" catchtouchmove="preventTouchMove" wx:if="{{poster_showModal}}" bindtap="hidePoster"></view>
<view class="poster_modal" wx:if="{{poster_showModal}}">
	<view class="poster_top">
		<image src="{{posterUrl}}" class="poster_bgimg"></image>
	</view>
	<view class="poster_btn" bindtap="save_posterImg">保存</view>
	<button class='openSetting' open-type="openSetting" bindopensetting='handleSetting'
		wx:if='{{openSettingBtnHidden}}'>保存</button>
</view>
<!-- END -->

<!-- 更换背景图 -->
<view class="mask" catchtouchmove="preventTouchMove" style="background: rgba(0, 0, 0, 1) !important"
	wx:if="{{image_showModal}}" bindtap="hideImg">
	<view class="pre">
		<view wx:for="{{backgroundImgs}}" wx:for-key="item" wx:for-index="id" wx:key="index" class="pre">
			<image src="{{item}}" bindtap="previewImg" mode="aspectFit"></image>
		</view>
	</view>
	<view class="btn">
		<view class="savebtn" bindtap="saveImage">设为背景</view>
	</view>
</view>
<!-- END -->

